{
  // GitHub Copilot Chat Settings
  "github.copilot.chat.agent.autoFix": true,
  "github.copilot.chat.agent.currentEditorContext.enabled": true,
  "github.copilot.chat.alternateGptPrompt.enabled": false,
  "github.copilot.chat.anthropic.thinking.enabled": true,
  "github.copilot.chat.anthropic.thinking.maxTokens": 16000,
  "github.copilot.chat.azureModels": {},
  "github.copilot.chat.byok.ollamaEndpoint": "http://localhost:11434",
  "github.copilot.chat.claudeSonnet45AlternatePrompt": "default",
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [],
  "github.copilot.chat.completionsFetcher": "node-fetch",
  "github.copilot.chat.copilotDebugCommand.enabled": true,
  "github.copilot.chat.customInstructionsInSystemMessage": true,
  "github.copilot.chat.customOAIModels": {},
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.suggestRelatedFilesForTests": true,
  "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.generateTests.codeLens": false,
  "github.copilot.chat.gpt5AlternatePrompt": "default",
  "github.copilot.chat.grokCodeAlternatePrompt": "default",
  "github.copilot.chat.imageUpload.enabled": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": false,
  "github.copilot.chat.languageContext.inline.typescript.enabled": false,
  "github.copilot.chat.languageContext.typescript.cacheTimeout": 500,
  "github.copilot.chat.languageContext.typescript.enabled": false,
  "github.copilot.chat.languageContext.typescript.includeDocumentation": false,
  "github.copilot.chat.languageContext.typescript.items": "minimal",
  "github.copilot.chat.localeOverride": "auto",
  "github.copilot.chat.nesFetcher": "node-fetch",
  "github.copilot.chat.newWorkspace.useContext7": false,
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  "github.copilot.chat.notebook.enhancedNextEditSuggestions.enabled": false,
  "github.copilot.chat.notebook.followCellExecution.enabled": false,
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [],
  "github.copilot.chat.responsesApiReasoningEffort": "default",
  "github.copilot.chat.responsesApiReasoningSummary": "detailed",
  "github.copilot.chat.reviewAgent.enabled": true,
  "github.copilot.chat.reviewSelection.enabled": true,
  "github.copilot.chat.reviewSelection.instructions": [],
  "github.copilot.chat.scopeSelection": false,
  "github.copilot.chat.setupTests.enabled": true,
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": true,
  "github.copilot.chat.terminalChatLocation": "chatView",
  "github.copilot.chat.useProjectTemplates": true,
  "github.copilot.chat.useResponsesApi": true,
  "github.copilot.chat.virtualTools.threshold": 128,  // ✅ Optimized for Copilot+ subscription - maximum tool selection
  
  // GitHub Copilot Editor Settings
  "github.copilot.editor.enableCodeActions": true,
  
  // GitHub Copilot Next Edit Suggestions
  "github.copilot.nextEditSuggestions.allowWhitespaceOnlyChanges": true,
  "github.copilot.nextEditSuggestions.enabled": false,
  "github.copilot.nextEditSuggestions.fixes": true,
  
  // GitHub Copilot Rename Suggestions
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  
  // ✅ ADD: Performance tuning
  "github.copilot.advanced": {
    "debug.overrideEngine": "grok-code-fast-1",  // Use faster model
    "debug.useNodeFetcher": true
  },

  // AI Agent Development Optimizations
  "github.copilot.chat.agent.maxTokens": 8192,  // Increased for complex agent tasks
  "github.copilot.chat.agent.streaming": true,  // Enable streaming for better responsiveness
  "github.copilot.chat.agent.contextWindow": 128000,  // Large context for agent development
  
  // AI Toolkit Integration
  "aiToolkit.modelContextProtocol.enabled": true,
  "aiToolkit.agentDevelopment.enabled": true,
  "aiToolkit.agentDevelopment.autoSave": true,
  "aiToolkit.agentDevelopment.trace.enabled": true,
  "aiToolkit.agentDevelopment.trace.level": "verbose",
  
  // Enhanced Debugging for Agents
  "debug.javascript.usePreview": true,
  "debug.node.autoAttach": "on",
  "debug.terminal.clearBeforeReusing": true,
  
  // Agent Development - Advanced Settings
  "github.copilot.chat.agent.codeActions.enabled": true,
  "github.copilot.chat.agent.codeActions.onSave": true,
  "github.copilot.chat.agent.codeActions.onType": true,
  "github.copilot.chat.agent.intelliSense.enabled": true,
  "github.copilot.chat.agent.intelliSense.completion": true,
  "github.copilot.chat.agent.intelliSense.hover": true,
  "github.copilot.chat.agent.intelliSense.signatureHelp": true,
  
  // Environment Variable Integration for Agent Development
  "github.copilot.chat.agent.environment.enabled": true,
  "github.copilot.chat.agent.github.enabled": true,
  "github.copilot.chat.agent.azure.enabled": true,
  "github.copilot.chat.agent.docker.enabled": true,
  "github.copilot.chat.agent.huggingface.enabled": true,

  // Python Settings - Updated for uv virtual environment
  "python.defaultInterpreterPath": "./.venv/Scripts/python.exe",  // Use uv virtual environment Python
  "python.terminal.activateEnvironment": true,
  "python.linting.enabled": true,
  "python.formatting.provider": "black",
  "python.linting.ruffEnabled": true,
  "python.analysis.typeCheckingMode": "basic",  // Reduced from strict to prevent hangs
  "python.envFile": "${workspaceFolder}/.env",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.interpreter.showDeprecatedWarning": false,
  "python-envs.pythonProjects": [],
  
  // Agent Development - Python Specific
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["--verbose", "--tb=short"],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.packageIndexDepths": [
    { "name": "agent_framework", "depth": 3 },
    { "name": "openai", "depth": 3 },
    { "name": "anthropic", "depth": 3 },
    { "name": "langchain", "depth": 3 }
  ],
  
  // File Associations for Agent Development
  "files.associations": {
    "*.mcp": "json",
    "*.agent": "python",
    "*.tool": "python"
  },
  
  // Search and Navigation for Agent Code
  "search.exclude": {
    "**/.venv/**": true,
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/__pycache__/**": true
  },
  
  // Workspace Trust for Agent Development
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.startupPrompt": "never"
}