# Modern Data Platform v2.0 - Production Environment
# IMPORTANT: Update all CHANGE_ME values before deploying!

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================
POSTGRES_DB=platform_prod
POSTGRES_USER=platform_user
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_MIN_16_CHARS
POSTGRES_VERSION=13-alpine

# =============================================================================
# MARIADB CONFIGURATION
# =============================================================================
MYSQL_ROOT_PASSWORD=CHANGE_ME_USE_STRONG_ROOT_PASSWORD_MIN_16_CHARS
MYSQL_DATABASE=platform_prod
MYSQL_USER=platform_user
MYSQL_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_MIN_16_CHARS
MARIADB_VERSION=11

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_MIN_16_CHARS
REDIS_VERSION=7-alpine

# =============================================================================
# MINIO CONFIGURATION
# =============================================================================
MINIO_ROOT_USER=CHANGE_ME_ADMIN_USERNAME_NO_DEFAULT
MINIO_ROOT_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_MIN_16_CHARS
MINIO_VERSION=latest

# =============================================================================
# JUPYTER CONFIGURATION
# =============================================================================
JUPYTER_TOKEN=CHANGE_ME_USE_STRONG_TOKEN_MIN_32_CHARS
JUPYTER_VERSION=latest

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GF_SECURITY_ADMIN_USER=CHANGE_ME_NO_DEFAULT_ADMIN
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_MIN_16_CHARS
GF_INSTALL_PLUGINS=
GRAFANA_VERSION=latest

# =============================================================================
# PROMETHEUS CONFIGURATION
# =============================================================================
PROMETHEUS_VERSION=latest
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=50GB

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_VERSION=alpine

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
CLUSTER_NETWORK_SUBNET=172.25.0.0/16
CLUSTER_NETWORK_GATEWAY=172.25.0.1

# =============================================================================
# RESOURCE LIMITS (Production - adjust based on workload)
# =============================================================================
POSTGRES_MEM_LIMIT=4g
POSTGRES_CPU_LIMIT=4.0
MARIADB_MEM_LIMIT=4g
MARIADB_CPU_LIMIT=4.0
REDIS_MEM_LIMIT=1g
REDIS_CPU_LIMIT=2.0
JUPYTER_MEM_LIMIT=8g
JUPYTER_CPU_LIMIT=8.0

# =============================================================================
# VOLUME PATHS
# =============================================================================
DATA_DIR=/opt/platform/data
LOGS_DIR=/opt/platform/logs
BACKUP_DIR=/opt/platform/backups

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD_PORT=3000
DASHBOARD_VERSION=latest

# =============================================================================
# PRODUCTION FLAGS
# =============================================================================
DEBUG=false
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_ALERTS=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
