# Modern Data Platform v2.0 - Development Environment
# Development settings with relaxed security for local testing

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================
POSTGRES_DB=platform_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password_change_in_production
POSTGRES_VERSION=13-alpine

# =============================================================================
# MARIADB CONFIGURATION
# =============================================================================
MYSQL_ROOT_PASSWORD=dev_root_password_change_in_production
MYSQL_DATABASE=platform_dev
MYSQL_USER=dev_user
MYSQL_PASSWORD=dev_password_change_in_production
MARIADB_VERSION=11

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=dev_redis_password
REDIS_VERSION=7-alpine

# =============================================================================
# MINIO CONFIGURATION
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_VERSION=latest

# =============================================================================
# JUPYTER CONFIGURATION
# =============================================================================
JUPYTER_TOKEN=dev_jupyter_token
JUPYTER_VERSION=latest

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_INSTALL_PLUGINS=
GRAFANA_VERSION=latest

# =============================================================================
# PROMETHEUS CONFIGURATION
# =============================================================================
PROMETHEUS_VERSION=latest
PROMETHEUS_RETENTION_TIME=7d
PROMETHEUS_RETENTION_SIZE=5GB

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_VERSION=alpine

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
CLUSTER_NETWORK_SUBNET=172.25.0.0/16
CLUSTER_NETWORK_GATEWAY=172.25.0.1

# =============================================================================
# RESOURCE LIMITS (Relaxed for development)
# =============================================================================
POSTGRES_MEM_LIMIT=1g
POSTGRES_CPU_LIMIT=1.0
MARIADB_MEM_LIMIT=1g
MARIADB_CPU_LIMIT=1.0
REDIS_MEM_LIMIT=256m
REDIS_CPU_LIMIT=0.5
JUPYTER_MEM_LIMIT=2g
JUPYTER_CPU_LIMIT=2.0

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD_PORT=3000
DASHBOARD_VERSION=latest

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================
DEBUG=true
LOG_LEVEL=debug
HOT_RELOAD=true
