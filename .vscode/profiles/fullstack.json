{ "servers": {
  "github":     {"command":"npx","args":["-y","@modelcontextprotocol/server-github"],"env":{"GITHUB_TOKEN":"${env:GITHUB_TOKEN}"}},
  "filesystem":     {"command":"npx","args":["-y","@modelcontextprotocol/server-filesystem","${workspaceFolder}"]},
  "git":     {"command":"uvx","args":["mcp-server-git"]},
  "fetch":     {"command":"uvx","args":["mcp-server-fetch"]},
  "playwright":     {"command":"npx","args":["-y","@executeautomation/playwright-mcp-server"]},
  "postgres":     {"command":"npx","args":["-y","@modelcontextprotocol/server-postgres","postgresql://postgres:${env:DOCKER_POSTGRES_PASSWORD}@localhost:5432/postgres"]},
  "sqlite":     {"command":"npx","args":["-y","mcp-server-sqlite-npx","${workspaceFolder}/db.sqlite"]},
  "memory":     {"command":"npx","args":["-y","@modelcontextprotocol/server-memory"]}
  }
}
