{
  "title": "Host System Metrics",
  "uid": "host-metrics",
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage by Core",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "(1 - avg by (cpu) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))) * 100",
          "legendFormat": "CPU {{cpu}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU %",
          "max": 100
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "title": "Memory Usage",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Used %",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "Memory %",
          "max": 100
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 3,
      "title": "Disk I/O",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[5m])",
          "legendFormat": "{{device}} Read",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[5m])",
          "legendFormat": "{{device}} Write",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "Bps",
          "label": "I/O"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 4,
      "title": "Network Traffic",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m])",
          "legendFormat": "{{device}} RX",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m])",
          "legendFormat": "{{device}} TX",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "Bps",
          "label": "Network"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 5,
      "title": "Disk Space Usage",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{fstype!=\"tmpfs\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\"})) * 100",
          "legendFormat": "{{mountpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "Used %",
          "max": 100
        },
        {
          "format": "short"
        }
      ]
    }
  ]
}
