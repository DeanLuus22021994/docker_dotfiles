# Modern Data Platform v2.0 - Environment Configuration Template
# Copy to .env and update values - NEVER commit .env to version control

# GitHub Integration
GITHUB_OWNER=your-github-username
GH_PAT=ghp_your_github_token

# Database Passwords
DOCKER_POSTGRES_PASSWORD=postgres_password_here
DOCKER_MARIADB_ROOT_PASSWORD=mariadb_root_password_here
DOCKER_MARIADB_PASSWORD=mariadb_password_here
DOCKER_REDIS_PASSWORD=redis_password_here

# Object Storage
DOCKER_MINIO_ROOT_USER=minioadmin
DOCKER_MINIO_ROOT_PASSWORD=minio_password_here

# Monitoring & Analytics
DOCKER_GRAFANA_ADMIN_PASSWORD=grafana_password_here

# Development Tools
DOCKER_JUPYTER_TOKEN=jupyter_token_here
DOCKER_PGADMIN_PASSWORD=pgadmin_password_here

# Optional Services
DOCKER_ACCESS_TOKEN=docker_hub_token_optional
CODECOV_TOKEN=codecov_token_optional

# API Security (Optional)
AUTH_ENABLED=false
JWT_SECRET=jwt_secret_64_char_hex_if_auth_enabled
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
NODE_ENV=development

