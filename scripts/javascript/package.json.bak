{
  "name": "@docker-dotfiles/scripts-javascript",
  "version": "1.0.0",
  "description": "Enterprise-grade JavaScript utilities and MCP tools for docker_dotfiles project",
  "private": true,
  "main": "index.js",
  "scripts": {
    "lint": "eslint **/*.js",
    "lint:fix": "eslint **/*.js --fix",
    "test": "echo \"No tests configured yet\" && exit 0"
  },
  "keywords": [
    "docker",
    "mcp",
    "model-context-protocol",
    "utilities",
    "enterprise"
  ],
  "author": "Dean Luus",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DeanLuus22021994/docker_dotfiles"
  },
  "devDependencies": {
    "eslint": "^8.50.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "indent": [
        "error",
        2
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-trailing-spaces": "error",
      "eol-last": [
        "error",
        "always"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-spacing": [
        "error",
        "never"
      ],
      "key-spacing": [
        "error",
        {
          "beforeColon": false,
          "afterColon": true
        }
      ]
    }
  }
}
