# Production Environment Configuration
NODE_ENV=production
PYTHONUNBUFFERED=1

# Database Configuration
POSTGRES_DB=mydb_prod
POSTGRES_USER=user_prod
POSTGRES_HOST=db
POSTGRES_PORT=5432

# API Endpoints
VITE_API_ENDPOINT=https://api.yourdomain.com

# Python Configuration
PYTHONPATH=/app:/app/python_utils
PYTHONOPTIMIZE=2
PYTHONDONTWRITEBYTECODE=1

# Node.js Configuration
NPM_CONFIG_LOGLEVEL=warn

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Service Ports
NODE_PORT=3000
PYTHON_PORT=8000
DB_PORT=5432

# Security
SECURE_COOKIES=true
HTTPS_ONLY=true
