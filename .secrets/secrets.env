# Docker - Secrets Environment Variables
# This file contains your actual secret values
# NEVER commit this file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

docker_DB_PASSWORD=secure_password_change_me
docker_DB_USER=postgres
docker_DB_NAME=docker
docker_DB_HOST=db
docker_DB_PORT=5432

# =============================================================================
# API SECURITY
# =============================================================================

docker_API_KEY=dev_api_key_change_me
docker_JWT_SECRET=dev_jwt_secret_change_me_64_chars_minimum
docker_RATE_LIMIT_REQUESTS=100
docker_RATE_LIMIT_WINDOW=60
docker_CORS_ORIGINS=http://localhost:3000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

docker_GITHUB_TOKEN=your_github_token_here
docker_REDIS_PASSWORD=
docker_REDIS_URL=redis://redis:6379

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

docker_ENVIRONMENT=development
docker_DEBUG=true
docker_LOG_LEVEL=INFO
docker_HOST=0.0.0.0
docker_PORT=8000

# =============================================================================
# MONITORING & METRICS
# =============================================================================

docker_METRICS_ENABLED=true
docker_METRICS_ENDPOINT=/metrics
docker_HEALTH_ENDPOINT=/health

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

docker_HOT_RELOAD=true
docker_AUTO_RESTART=true
docker_VERBOSE_LOGGING=true

# =============================================================================
# SECURITY HEADERS
# =============================================================================

docker_SECURITY_HEADERS_ENABLED=true
docker_CSP_ENABLED=true
docker_HSTS_ENABLED=true
docker_X_FRAME_OPTIONS=DENY</content>
<parameter name="filePath">c:\global\docker\.secrets\secrets.env